@page
@model ElektronikEksiltmeOturumModel
@{
    ViewData["Title"] = "Elektronik Eksiltme Oturumu";
}

<h1 class="page-title">@ViewData["Title"]</h1>

<div class="oturum-container">
    <section class="ihale-bilgi">
        <h2>İhale Bilgileri</h2>
        <div class="grid">
            <div>
                <div class="label">İhale Kayıt No</div>
                <div class="value">@Model.Ihale.IKN</div>
            </div>
            <div>
                <div class="label">İdare Adı</div>
                <div class="value">@Model.Ihale.AuthorityName</div>
            </div>
            <div>
                <div class="label">İhale Adı</div>
                <div class="value">@Model.Ihale.TenderName</div>
            </div>
            <div>
                <div class="label">Kısım Adı</div>
                <div class="value">@Model.Ihale.PartName</div>
            </div>
            <div>
                <div class="label">Asgari Fark Aralığı</div>
                <div class="value">@Model.Ihale.MinimumDecrement.ToString("N0") ₺</div>
            </div>
        </div>
    </section>

    <section class="countdown">
        <h2>Eksiltme Başlangıcına Kalan Süre</h2>
        <div id="countdown" class="countdown-clock">00:00:00</div>
        <div class="countdown-sub">Başlangıç: @Model.Ihale.SessionStart • Bitiş:
            @Model.Ihale.SessionEnd</div>
    </section>

    <section class="timeline">
        <h2>Elektronik Eksiltme Zaman Çizelgesi</h2>
        <table class="timeline-table">
            <thead>
                <tr>
                    <th>Tur</th>
                    <th>Başlangıç</th>
                    <th>Bitiş</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var round in Model.Rounds)
                {
                    <tr>
                        <td>@round.Name</td>
                        <td>@round.Start</td>
                        <td>@round.End</td>
                    </tr>
                }
            </tbody>
        </table>
        <div style="margin-top:12px; text-align:right;">
            <a class="ee-btn" asp-page="/ElektronikEksiltmeCanli" asp-route-ikn="@Model.Ihale.IKN">Oturuma Geç</a>
        </div>
    </section>
</div>

<style>
    .page-title {

        margin-left: 90px;
    }

    .oturum-container {
        max-width: 1100px;
        margin: 0 auto;
        display: grid;
        gap: 20px;
    }

    .ihale-bilgi .grid {
        display: grid;
        grid-template-columns: repeat(auto-fit, minmax(240px, 1fr));
        gap: 12px;
    }

    .ihale-bilgi .label {
        font-size: .85rem;
        color: #6b7280;
    }

    .ihale-bilgi .value {
        font-weight: 600;
    }

    .countdown {
        text-align: center;
        background: #f8fafc;
        border: 1px solid #e5e7eb;
        padding: 16px;
        border-radius: 8px;
    }

    .countdown-clock {
        font-size: 2.5rem;
        font-weight: 700;
        letter-spacing: 1px;
        margin: 6px 0;
    }

    .countdown-sub {
        color: #374151;
        font-size: .95rem;
    }

    .timeline-table {
        width: 100%;
        border-collapse: collapse;
    }

    .timeline-table th,
    .timeline-table td {
        border-bottom: 1px solid #eee;
        padding: 10px;
        text-align: left;
    }

    .timeline-table thead th {
        background: #f3f4f6;
        font-weight: 600;
    }

    .ee-btn {
        display: inline-block;
        padding: 8px 12px;
        background: #0d6efd;
        color: #fff;
        text-decoration: none;
        border-radius: 6px;
    }
</style>

<script>
    (function () {
        const startIso = '@Model.Ihale.SessionStart.ToString("o")';
        const startTime = new Date(startIso);
        const el = document.getElementById('countdown');
        function pad(n) { return n.toString().padStart(2, '0'); }
        function tick() {
            const now = new Date();
            let diff = Math.max(0, startTime - now);
            const days = Math.floor(diff / 86_400_000); // 1 gün = 24 * 60 * 60 * 1000 ms
            diff -= days * 86_400_000;
            const hours = Math.floor(diff / 3_600_000);
            diff -= hours * 3_600_000;
            const minutes = Math.floor(diff / 60_000);
            diff -= minutes * 60_000;
            const seconds = Math.floor(diff / 1000);
            el.textContent = `${days} gün ${pad(hours)} saat ${pad(minutes)} dakika ${pad(seconds)} saniye`;
        }
        tick();
        setInterval(tick, 1000);
    })();
</script>
