@page
@model WebApplication1.Pages.Admin.SettingsModel
@{
    ViewData["Title"] = "Yönetici Ayarları";
}

<h2>Yönetici Ayarları</h2>

<form method="post" class="mt-3">
    <div class="form-check mb-3">
        <input class="form-check-input" type="checkbox" asp-for="Form.ExcludeTopBidderInNextRound"
            id="excludeTopBidder">
        <label class="form-check-label" for="excludeTopBidder">
            En yüksek teklifi veren bir sonraki tura katılamasın
        </label>
    </div>
    <div class="form-check mb-3">
        <input class="form-check-input" type="checkbox" asp-for="Form.AllowUnlimitedRounds" id="allowUnlimited">
        <label class="form-check-label" for="allowUnlimited">
            Bir oturum içinde sınırsız sayıda tur yapılabilsin
        </label>
    </div>
    <p>Tur sayısını giriniz: </p>
    <input asp-for="Form.RoundCount" type="number" min="1" max="10" class="form-control" style="max-width:160px;" />


    <hr>
    <button type="submit" class="btn btn-primary">Kaydet</button>
    @if (!string.IsNullOrEmpty(Model.SuccessMessage))
    {
        <span class="text-success ms-3">@Model.SuccessMessage</span>
    }
</form>

<p class="text-muted mt-3">Bu sayfa sadece yöneticiler tarafından düzenlenebilir.</p>
