@page
@model BiddingModel
@{
    ViewData["Title"] = "Elektronik Eksiltme";
}

<h1>@ViewData["Title"]</h1>

<div class="bidding-container">
    <div class="timers">
        <div>
            <strong>Turun Bitişine Kalan Süre:</strong>
            <span id="round-timer">05:00</span>
        </div>
        <div>
            <strong>Eksiltmenin Bitişine Kalan Süre:</strong>
            <span id="tender-timer">30:00</span>
        </div>
    </div>

    <form method="post" class="bid-form">
        <label for="bidAmount">Teklifiniz:</label>
        <input type="number" id="bidAmount" name="BidAmount" min="0" step="0.01" required />
        <button type="submit">Teklif Ver</button>
    </form>

    <h2>Güncel Sıralama</h2>
    <table class="rankings-table">
        <thead>
            <tr>
                <th>Sıra</th>
                <th>Firma</th>
                <th>Teklif</th>
            </tr>
        </thead>
        <tbody>
            @* Örnek satırlar; dinamik verilerle değiştirin *@
            <tr>
                <td>1</td>
                <td>Firma A</td>
                <td>100.000 ₺</td>
            </tr>
            <tr>
                <td>2</td>
                <td>Firma B</td>
                <td>105.000 ₺</td>
            </tr>
        </tbody>
    </table>

    <h2>Eksiltme Zaman Çizelgesi</h2>
    <div class="timeline-diagram">
        <ul>
            <li>Başlangıç</li>
            <li>1. Tur</li>
            <li>2. Tur</li>
            <li>3. Tur</li>
            <li>Bitiş</li>
        </ul>
    </div>
</div>

<style>
.bidding-container { max-width: 800px; margin: auto; }
.timers { display: flex; gap: 2em; margin-bottom: 1em; }
.bid-form { margin-bottom: 2em; }
.rankings-table { width: 100%; border-collapse: collapse; margin-bottom: 2em; }
.rankings-table th, .rankings-table td { border: 1px solid #ccc; padding: 0.5em; text-align: center; }
.timeline-diagram ul { display: flex; list-style: none; padding: 0; }
.timeline-diagram li { flex: 1; text-align: center; position: relative; }
.timeline-diagram li:not(:last-child)::after {
    content: '→';
    position: absolute;
    right: -1em;
    top: 0;
}
</style>